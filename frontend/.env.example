# API Configuration - For production, update with your backend URL
NEXT_PUBLIC_API_URL=https://your-backend-url.onrender.com
NEXT_PUBLIC_SITE_URL=https://veetssuites.vercel.app

# Demo Mode (set to true for frontend-only deployment without backend)
NEXT_PUBLIC_DEMO_MODE=true

# Payment Keys (Public) - Use test keys for demo, live keys for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_demo_key
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_demo_key

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=

# Feature Flags - Enable when backend is ready
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_REAL_TIME_CHAT=false

# Vercel Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS=true